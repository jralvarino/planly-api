{
    "name": "planly-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "npm run build && npm run sam:local:start",
        "dev:debug": "npm run build && npm run sam:local:start:debug",
        "build": "tsc",
        "sam:build": "cd deployment && sam build --template-file template.yaml",
        "sam:deploy": "cd deployment && sam deploy --template-file template.yaml",
        "sam:local:start": "cd deployment && sam local start-api --template template.yaml --port 3000 --env-vars env.json --docker-network planly-api_default --warm-containers EAGER",
        "sam:local:start:debug": "cd deployment && sam local start-api --template template.yaml --port 3000 --debug-port 9229 --env-vars env.json --docker-network planly-api_default --warm-containers EAGER",
        "deploy": "./deployment/deploy.sh",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:build": "docker-compose build",
        "docker:init-db": "chmod +x scripts/init-dynamodb.sh && DYNAMODB_ENDPOINT=http://localhost:8000 ./scripts/init-dynamodb.sh",
        "reset-stats": "chmod +x scripts/reset-stats.sh && ./scripts/reset-stats.sh",
        "reset-stats:ts": "npm run build && node dist/scripts/reset-stats.js",
        "docker:restart": "docker-compose down && docker-compose up -d",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "swagger": "npx --yes serve deployment -p 8080"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "devDependencies": {
        "@types/aws-lambda": "^8.10.159",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^2.1.9",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^2.1.9"
    },
    "dependencies": {
        "@aws-lambda-powertools/logger": "^2.30.2",
        "@aws-lambda-powertools/tracer": "^2.30.2",
        "@aws-sdk/client-dynamodb": "^3.956.0",
        "@aws-sdk/client-secrets-manager": "^3.966.0",
        "@aws-sdk/lib-dynamodb": "^3.956.0",
        "@middy/core": "^6.4.5",
        "@middy/http-error-handler": "^6.4.5",
        "@middy/http-event-normalizer": "^6.4.5",
        "@middy/http-json-body-parser": "^6.4.5",
        "@middy/http-router": "^6.4.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^17.2.3",
        "http-errors": "^2.0.1",
        "jsonwebtoken": "^9.0.2",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0",
        "uuid": "^13.0.0",
        "zod": "^4.3.6"
    }
}
